@{
    ViewData["Title"] = "Upload log file";
}
<div class="container-fluid flex-grow-1 container-p-y">

    <h4 class="font-weight-bold py-3 mb-4">
        Dashboard
        <div class="text-muted text-tiny mt-1"><small class="font-weight-normal">Upload log manually</small></div>
    </h4>
    <div asp-validation-summary="ModelOnly" class="alert alert-dark-danger alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        The following errors are occurred: <br /><br />
    </div>

    <div class="row">

        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Uploader">
            <div class="form-group">
                <div class="col-md-10">
                    <input type="file" name="files"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-primary btn-lg" value="Upload"/>
                </div>
            </div>
        </form>
    </div>
</div>