@{
    ViewData["Title"] = "Settings";
}
@model NewFolderModel

<!-- Content -->
<div class="container-fluid flex-grow-1 container-p-y">

    <h4 class="font-weight-bold py-3 mb-4">
        <span class="text-muted font-weight-light">Settings /</span> Add new folder
    </h4>
    
    <div class="card mb-4">
        <h6 class="card-header">
            Enter new folder details
        </h6>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-dark-danger alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                The following errors are occurred: <br /><br />
            </div>
            <form action="@Url.Action("NewFolder", "Settings")" method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Folder name">
                    </div>
                </div>
                <div class="form-group">
                    <label class="custom-control custom-checkbox m-0">
                        <input asp-for="IsActive" type="checkbox" class="custom-control-input">
                        <span class="custom-control-label">Make this folder active</span>
                    </label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>